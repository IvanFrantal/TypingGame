	// f-ja za provjeru da vidim radi li kako treba
	function void printList(Array SkupSlova)
	{
		var int br;
		var string s;
		let br = 0;
	
		while (br < 16)
		{
			let s = SkupSlova[br];
			do Output.printString(s);
			
			let br = br + 1;
		}
		
		return;
	}
	
