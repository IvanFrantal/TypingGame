	{
		var int br;
		var string SlovoSrazmakom;
		
		let br = 0;
		let SlovoSrazmakom = " ";
		
		while (br < 16)
		{
			let SlovoSrazmakom = Strings.concat(SlovoSrazmakom, SkupSlova[br]);
			let SlovoSrazmakom = Strings.concat(SlovoSrazmakom, " ");
			let SlovoSrazmakom = Strings.concat(SlovoSrazmakom, " ");
			
			let SlovaRazmaci[br] = SlovoSrazmakom;
		
			let SlovoSrazmakom = " ";
			let br = br + 1;
		}
	
		return;
	}
	
